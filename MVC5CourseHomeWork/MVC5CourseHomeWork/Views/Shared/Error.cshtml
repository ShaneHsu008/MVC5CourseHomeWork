@model HandleErrorInfo
<!DOCTYPE html >
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>錯誤</title>
</head>
<body>
    <hgroup>
        <h1>錯誤。</h1>
        <h2>處理您的要求時發生錯誤。</h2>
        <hr />
        @*將捕捉到錯誤的訊息顯示改寫然後在這裡呈現*@
        <h1>
            @Model.Exception.Message
        </h1>
        <hr />
        @Model.Exception.ToString();
    </hgroup>
</body>
</html>
