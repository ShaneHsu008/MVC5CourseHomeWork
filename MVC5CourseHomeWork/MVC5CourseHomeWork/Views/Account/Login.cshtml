@model MVC5CourseHomeWork.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h1>@ViewBag.Message</h1>

@using (Html.BeginForm("Login", "account", FormMethod.Post, new { @class = "form-signin" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.帳號, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.帳號, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(a => a.帳號) } })
                @Html.ValidationMessageFor(model => model.帳號, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.密碼, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.密碼, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(a => a.密碼) } })
                @Html.ValidationMessageFor(model => model.密碼, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">
                    登入
                </button>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger text-error" })
    </div>
}