@{
    ViewBag.Title = "Home Page";
}
<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>
<button onclick="testJson()" style="font-size:20px;">取得Json</button>
<div>
    <p id="json">

    </p>
</div>

@section scripts{
    <script>
        function testJson() {
            var url = "@Url.Action("CountJson", "Information")";
            $.get(url).then((result) => {
                console.log(result);
                $("#json").html("JSON Return：<br/>"+result);
            });
        }
    </script>
}